<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment android:name="me.mikeliu.googleimagesearch.controllers.ImageResultsFragmentController"
              android:id="@+id/image_results_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent" />

    <fragment android:name="me.mikeliu.googleimagesearch.controllers.HistoryFragmentController"
              android:id="@+id/drawer_fragment"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="start" />

</android.support.v4.widget.DrawerLayout>
